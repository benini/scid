proc ::tactics::startAnalyze {} {
  ::engine::startAnalysis 1
  set ::tactics::isThinking 1
  setInfo [::msgcat::mc "Thinking, wait before entering your move"] IndianRed
  after [expr 1000 * $::tactics::analysisTime] ::tactics::stopAnalyze
}
